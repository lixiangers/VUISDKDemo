<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <Button
        android:id="@+id/bt_asr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="语音识别+语音语义理解"/>

    <Button
        android:id="@+id/bt_semantic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_asr"
        android:text="Text语义理解"/>

    <Button
        android:id="@+id/bt_tts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_semantic"
        android:text="语音合成"/>

    <Button
        android:id="@+id/bt_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Release SDK"/>
</RelativeLayout>